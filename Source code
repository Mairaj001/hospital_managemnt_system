		void doct_6();
		
};
int doctors::doctor_details()
{ 
        int k;
          do{
          	getch();
		  
		  cout<<"\nThe availabilty of doctors are\n";
          for(int i=0;i<6;i++)
          {
          	cout<<"\n"<<i+1<<". "<<doct[i];
		  }
		
		  cout<<"\nEnter the key to get details of the doctors:";
		  cin>>k;
				  		  
		  switch(k)//shows timetable of doct
		  {
		  	case 1: doct_1();break;
		  	case 2: doct_2();break;
		  	case 3: doct_3();break;
		  	case 4: doct_4();break;
		  	case 5: doct_5();break;
		  	case 6: doct_6();break;
		  		
		  	
	}
		  return k;
		  
}while(k!=7);
}

