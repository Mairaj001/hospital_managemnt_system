void patient::get_data_stream()
{
		ofstream input;
				input.open("pateint detail.txt");
		
				cout<<"Enter the id of the patient:";
				getline(cin,id);   input<<id<<endl;
				
				cout<<"Enter the name :";
			  	getline(cin,Name);    input<<Name<<endl;

				cout<<"Enter the membership id of the patient:";
				getline(cin,membership_id);  input<<membership_id<<endl;
				
				cout<<"Enter the gender:";
				getline(cin,gender);    input<<gender<<endl;
				
				cout<<"Enter the age:";
				cin>>age;               input<<age<<endl;
				
				cout<<"Enter the blood pressure:";
				getline(cin,bp);        input<<bp<<endl;
				
				cout<<"select  the doctor for consult";
				doctors::doctor_details();
				
				cout<<"Enter the sr also";   cin>>doct_name_sr;
				cout<<"Enter the name also";
				getline(cin,doct_name);  input<<doct_name<<endl;
				cout<<"price is generated autoamtically";
				int s=get_calc_price_doct();
				input<<s<<endl;
				input.close();
}
int  patient::get_calc_price_doct()
{
	
	if(1==doct_name_sr)
	{
		price=1000;
	}
	else if(2==doct_name_sr)
	{
		price=1200;
		return price;
	}
	else if(3==doct_name_sr)
	{
		price=1000;
		return price;
	}
	else if(4==doct_name_sr)
	{
		price=1600;
		return price;
	}
	
}
